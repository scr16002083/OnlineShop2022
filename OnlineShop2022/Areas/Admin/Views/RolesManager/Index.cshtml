@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Role Manager";
}
<h1>Roles Management</h1>

<form method="post" asp-action="AddRole" asp-controller="RolesManager">
    <div class="input-group">
        <input name="roleName" class="form-control w-25" />
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Role</button>
        </span>
    </div>
</form>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Role</th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteRole" asp-route-id="@role.Name">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>


